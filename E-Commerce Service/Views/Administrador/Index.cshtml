@model IEnumerable<E_Commerce_Service.Models.FiltroViewModels>

@{
    ViewBag.Title = "Administrador";
}

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryAjax")
@Styles.Render("~/Content/css")

<h2>Administrador</h2>

<hr />
<div>
    @using (Ajax.BeginForm("Index", "Administrador", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "gridResultado" }))
    {

            <div class="form-group paddingFind">
            @Html.Label("Nome", new { @class = "col-md-2 control-label paddingFind" })
            <div class="col-md-10 paddingFind">
                @Html.TextBox("Nome", "", new { @class = "form-control paddingFind" })
            </div>
        </div>

        <div class="form-group paddingFind">
            @Html.Label("Email", new { @class = "col-md-2 control-label paddingFind" })
            <div class="col-md-10 paddingFind">
                @Html.TextBox("Email", "", new { @class = "form-control paddingFind" })
            </div>
        </div>

        <div class="form-group paddingFind">
            <div class="col-md-offset-2 col-md-10 paddingFind">
                <input title="Pesquisar" type="submit" class="btn btn-outline-success" value="Pesquisar" />
            </div>
        </div>
    }
</div>

<p><br /><hr /></p>


@Html.Partial("_PartialGridResultado", Model)

