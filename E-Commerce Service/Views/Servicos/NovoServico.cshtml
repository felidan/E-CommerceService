@using E_Commerce_Service.Models
@model NovoServicoViewModels
@{
    ViewBag.Title = "Novo Serviço";
}


<h2>Cadastre seu serviço.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("CadastrarNovoServico", "Servicos", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>É simples e rápido!</h4>
                <hr />
                <div class="form-group">
                    @Html.Label("Selecione a categoria", new { @class = "col-md-3 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownList("Categoria", ViewBag.Categorias as SelectList, new { @class = "form-control paddingFind" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NomeServico, new { @class = "col-md-3 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.NomeServico, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Preco, new { @class = "col-md-3 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Preco, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Distancia, new { @class = "col-md-3 control-label" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Distancia, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input title="Cadastrar" type="submit" value="Cadastrar" class="btn btn-outline-success" />
                    </div>
                </div>
                <div class="col-md-offset-3 col-md-10">
                    @Html.ActionLink("voltar", "MyServices", "Servicos")
                </div>
                }
        </section>
     </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            <h4>E-Commerce Service</h4>
            <hr />
            <div>
                <p>
                    Pensando sempre em você, a E-Commerce Service tentou simplificar o máximo possível 
                    o cadastro de serviços para não haja dor de cabeça na hora do cadastro.
                    <br />
                    Por favor, preencha os dados ao lado.
                </p>
            </div>
        </section>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}